; make sure to update the epoch time in the SOA records so BIND picks up the changes automatically
; https://www.epochconverter.com
$TTL 3600
$ORIGIN 168.192.in-addr.arpa.
@ 3600 IN SOA 168.192.in-addr.arpa. gateway.home.arpa. (
    1732634120  ; serial number (epoch timestamp)
    7200        ; refresh period
    3600        ; retry period
    1209600     ; expire time
    3600        ; minimum ttl
)

; NS records
@               IN  NS gateway.home.arpa.

; reset origin
$ORIGIN in-addr.arpa.

; LAN
1.10.168.192    IN  NS  gateway.home.arpa.

