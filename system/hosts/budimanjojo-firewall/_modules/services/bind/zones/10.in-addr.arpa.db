; make sure to update the epoch time in the SOA records so BIND picks up the changes automatically
; https://www.epochconverter.com
$TTL 3600
$ORIGIN 10.in-addr.arpa.
@ 3600 IN SOA 10.in-addr.arpa. gateway.home.arpa. (
    1732939828  ; serial number (epoch timestamp)
    7200        ; refresh period
    3600        ; retry period
    1209600     ; expire time
    3600        ; minimum ttl
)

; NS records
@               IN  NS gateway.home.arpa.

; reset origin
$ORIGIN in-addr.arpa.

; WIREGUARD
2.0.10.10       IN  PTR pocof6-phone-wg.home.arpa.
3.0.10.10       IN  PTR work-pc-wg.home.arpa.
4.0.10.10       IN  PTR oneplus6t-phone-wg.home.arpa.
